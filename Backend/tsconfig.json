{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./",
    "outDir": "./dist",

    /* Module System */
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,

    /* Type Support */
    "types": ["node"],

    /* Output Options */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Editor Experience */
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",

    /* JSX (for frontend later) */
    "jsx": "react-jsx"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}